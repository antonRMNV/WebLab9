@{
    ViewData["Title"] = "Start Page";
}
@model int
<html>
<head>
    <title>
        @ViewData["Title"]
    </title>
</head>
<body>
    <div class="text-center">
        <div class="display-3">
            Add some products
        </div>
        <form method="post" style="margin:auto; width:50%">
            <div class="form-group">
                <label>Enter product's ID</label>
                <input class="form-control" type="number" name="id" />
            </div>
            <div class="form-group">
                <label>Enter product's name</label>
                <input class="form-control" type="text" name="name" />
            </div>
            <div class="form-group">
                <label>Enter product's price*</label>
                <input class="form-control" type="number" name="price" />
                <small class="form-text text-muted">*price in UAH</small>
            </div>
            <br />
            <button type="submit" class="btn btn-outline-primary" asp-action="Index">Add</button>
            <button type="submit" class="btn btn-outline-secondary" asp-action="ViewProducts">View</button>
            <div class="display-6">Products added: @Model</div>
        </form>
    </div>
</body>
</html>
